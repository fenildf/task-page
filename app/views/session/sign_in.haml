.row
  .col-pad-8.col-pad-offset-2
    .sign-header Task Page
.row
  .col-pad-4.col-pad-offset-4
    .sign-form
      .title 管理员登录 …
      = form_tag "/sign_in", :method => :post do
        .field
          = text_field_tag :email,nil,:placeholder => "邮箱",:class=>"form-control"
        .field
          = password_field_tag :password,nil,:placeholder => "密码",:class=>"form-control"
        .field
          %button.submit.btn.btn-rounded.btn-bdb-success.btn-block.btn-large 登录
        .auth-msg{style: 'display:none;'} 提示信息

